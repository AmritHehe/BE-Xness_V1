generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user { 
  id String @id @default(ulid())
  email String @unique
  lastLoggedIn DateTime?
  existingTrades existingTrades[]


}
model existingTrades { 
  id String @id @default(uuid())
  openPrice Float
  closePrice Float
  leverage Float
  pnl Float
  asset asset @relation(fields: [assetId] , references: [id])
  assetId String
  liquidated Boolean
  user user@relation(fields: [userId] , references: [id])
  userId String
  CreatedAt DateTime
}

model asset { 
  id String @id @default(uuid())
  symbol String
  imageUrl String
  name String
  decimals Int
  ExistingTrades existingTrades[]
}